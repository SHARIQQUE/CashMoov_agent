<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>
    <style name="AppThemeNew" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/aileron_bold</item>
        <item name="android:textColorHint">@color/bgColorHint</item>
    </style>


    <style name="SpinnerStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>

    </style>

    <style name="TextViewFinger" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/aileron_bold</item>
        <item name="android:lineSpacingExtra">@dimen/_3sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:visibility">visible</item>
        <item name="android:text">@string/fingerprint</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>

    </style>

    <style name="SpinnerStyleNew" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/spinner_color</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/aileron_semibold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="SpinnerStyleNew1" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:textColor">@color/spinner_color</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/aileron_semibold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/spinner_background</item>

    </style>



</resources>
