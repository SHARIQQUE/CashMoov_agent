<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColorHint">@color/bgColorHint</item>
    </style>


    <style name="SpinnerStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>

    </style>

    <style name="TextViewFinger" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/aileron_bold</item>
        <item name="android:lineSpacingExtra">@dimen/_3sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:visibility">visible</item>
        <item name="android:text">"Use Fingerprint"</item>




    </style>

</resources>
