<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterAgentOrBranchDoc">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.5dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="214dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp">



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/attach"
                    />



            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#29304d"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aileron_bold"
                android:lineSpacingExtra="7sp"
                android:text="Attachez L'ID du client "
                android:layout_gravity="center"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#323232"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/aileron_semibold"
                android:lineSpacingExtra="8sp"
                android:textAlignment="center"
                android:text="Avec votre appareil prenez une photo de la pièce d'identité du client."
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">
                <Spinner
                    android:id="@+id/SpinnertypeID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_edittextname"
                    android:backgroundTint="#999999"
                    android:inputType="textEmailAddress"
                    android:lineSpacingExtra="10sp"
                    android:paddingLeft="37.5dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="#323232"
                    android:entries="@array/Spinner_typeID"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_edittextname"
                    android:backgroundTint="#999999"
                    android:inputType="textEmailAddress"
                    android:lineSpacingExtra="10sp"
                    android:paddingLeft="37.5dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:hint="Numéro de la pièce"
                    android:textColor="#323232"
                    android:textSize="15sp" />

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonChoose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_horizontal"
                        android:background="@drawable/btn_blue"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:srcCompat="@drawable/ic_baseline_add_photobl"
                        />

                    <EditText
                        android:id="@+id/editTextName"
                        android:hint="Ex: Recto"
                        android:layout_weight="1"
                        android:background="@drawable/btn_edittextname"
                        android:backgroundTint="#999999"
                        android:inputType="textEmailAddress"
                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="37.5dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#323232"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Upload" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonChoose2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_horizontal"
                        android:background="@drawable/btn_blue"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:srcCompat="@drawable/ic_baseline_add_photobl"
                        />

                    <EditText
                        android:id="@+id/editTextverso"
                        android:hint="Ex: Verso"
                        android:layout_weight="1"
                        android:background="@drawable/btn_edittextname"
                        android:backgroundTint="#999999"
                        android:inputType="textEmailAddress"
                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="37.5dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#323232"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Upload" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#29304d"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/aileron_bold"
                    android:lineSpacingExtra="7sp"
                    android:text="Autre documents "
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/buttonChooseautre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_horizontal"
                        android:background="@drawable/btn_blue"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        app:srcCompat="@drawable/ic_baseline_add_photobl"
                        />

                    <EditText
                        android:id="@+id/editTextNameautre"
                        android:hint="Ex: doc"
                        android:layout_weight="1"
                        android:background="@drawable/btn_edittextname"
                        android:backgroundTint="#999999"
                        android:inputType="textEmailAddress"
                        android:lineSpacingExtra="10sp"
                        android:paddingLeft="37.5dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:textColor="#323232"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Upload" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="130dp"
                    android:background="@drawable/btn_blue"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:fontFamily="@font/aileron_bold"
                    android:gravity="center"
                    android:text="Terminer"
                    />

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>