<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/aileron_bold"
                        android:textColor="#29304d"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="7sp"
                        android:text="@string/verification"
                        />

                    <TextView
                        android:id="@+id/txt_otp_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_700"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_20sdp"/>


                        <EditText
                            android:id="@+id/et_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/btn_edittextname"
                            android:backgroundTint="@color/bgColorHint"
                            android:hint="@string/hint_otp"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_12sdp"
                            android:textColor="@color/textcolor"
                            android:drawableStart="@drawable/ic_otp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:inputType="numberPassword"
                            android:maxLength="6"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/aileron_semibold"/>

                    <LinearLayout
                        android:id="@+id/ll_resendOtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/_10sdp">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@string/didnot_get_the_Code"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:text="@string/resend_it"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/blue_colour_review"
                            android:textSize="@dimen/_11sdp"
                            />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_otp_success_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/green_700"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_verify_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/btn_blue"
                        android:text="@string/otp_verify"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
