                    android:textColor="@color/blue_colour_review"
                    android:textSize="@dimen/_11sdp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pinLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
