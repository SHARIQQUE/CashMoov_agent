<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transactionhistory_walletscreen.WalletTransactionDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_active" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aileron_semibold"
                android:lineSpacingExtra="3sp"
                android:text="@string/transaction_details"
                android:textColor="#29304d"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="@dimen/_15sdp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_2sdp">
                <TextView
                    android:id="@+id/txt_trans_type_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="N/A"
                    android:fontFamily="@font/aileron_regular"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_13sdp"
                    android:gravity="center_vertical"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/view_color_light"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/txt_commission_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="N/A"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_13sdp"
                        android:fontFamily="@font/aileron_bold"
                        android:gravity="center_vertical|end" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_2sdp">
                    <TextView
                        android:id="@+id/txt_from_owner_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/textcolorheading"
                        android:textSize="@dimen/_13sdp"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/aileron_semibold"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_3sdp"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:text="N/A"
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center_vertical|end" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_trans_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:text="N/A"
                    android:fontFamily="@font/aileron_regular"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/_10sdp" />
                <TextView
                    android:id="@+id/txt_creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/aileron_regular"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_2sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_2sdp">
                    <TextView
                        android:id="@+id/txt_from_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/aileron_regular"
                        android:gravity="center_vertical"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:background="@color/view_color_light"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_success"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="N/A"
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center_vertical|end" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>