<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/_6sdp"
    android:orientation="vertical"
    android:id="@+id/click_row_layout"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/round_shape"
    app:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"



        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight=".05"
            android:layout_gravity="center"

            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/aileron_bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                app:srcCompat="@drawable/ic_lewallet" />

            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight=".60"

            android:orientation="vertical">

            <TextView
                android:id="@+id/agentName_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="N/A"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/email_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="N/A"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/source"
                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/destination"
                android:textColor="@color/textcolorheading"

                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/source_msisdn"
                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"

                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/dest_msisdn"

                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/recharge_no"

                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/amounts"

                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"

                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/fee"
                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"

                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/tax_type"

                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/tax"

                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/trans_reversed"
                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"

                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/trans_date"

                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/status"

                android:textColor="@color/textcolorheading"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"


            android:orientation="vertical">

            <TextView
                android:id="@+id/agent_mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textAlignment="textEnd"
                android:text="N/A"
                android:textColor="@color/red_600"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/countryName_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="N/A"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/transId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="gone"

                android:text="N/A"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />




            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="N/A"
                android:visibility="gone"

                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/sourceMSISDN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="N/A"
                android:visibility="gone"

                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/destMSISDN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="gone"

                android:text="N/A"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/rechargeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="N/A"
                android:visibility="gone"

                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />



            <TextView
                android:id="@+id/fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="N/A"
                android:visibility="gone"

                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/taxType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="gone"

                android:text="N/A"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="N/A"
                android:visibility="gone"

                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/transReversed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="N/A"
                android:visibility="gone"

                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />



            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="gone"

                android:text="N/A"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_weight="0.05"
            android:layout_gravity="center"

            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="@font/aileron_bold"
                android:layout_gravity="end"
                android:gravity="end"
                app:srcCompat="@drawable/ic_view" />

            />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/btn_blue"
        android:fontFamily="@font/aileron_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3sp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:text="@string/continu"
        android:textColor="#ffffff"
        android:textSize="@dimen/_13sdp" />

</LinearLayout>